<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.khalilayache.newspapper">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".ui.base.NewsApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".ui.activity.SplashActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".ui.activity.NewsCategoryActivity"/>
    <activity android:name=".ui.base.BaseActivity"/>
    <activity android:name=".ui.activity.NewsListActivity">
    </activity>
  </application>

</manifest>
